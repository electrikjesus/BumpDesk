<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BumpDesk"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="20sp"
            android:textColor="#AAAAAA"
            android:layout_marginBottom="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appearance"
            android:textColor="#D0BCFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <CheckBox
            android:id="@+id/cbShowRecentApps"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Show Recent Apps Pile"
            android:textColor="#FFFFFF"
            android:buttonTint="#D0BCFF" />

        <CheckBox
            android:id="@+id/cbShowAppDrawerIcon"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Show All Apps Icon"
            android:textColor="#FFFFFF"
            android:checked="true"
            android:buttonTint="#D0BCFF" />

        <CheckBox
            android:id="@+id/cbInfiniteDesktop"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Infinite Desktop Mode"
            android:textColor="#FFFFFF"
            android:buttonTint="#D0BCFF" />

        <CheckBox
            android:id="@+id/cbUseWallpaperAsFloor"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Use System Wallpaper as Floor"
            android:textColor="#FFFFFF"
            android:buttonTint="#D0BCFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnChangeTheme"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Select Visual Theme"
            android:textColor="#D0BCFF"
            android:layout_marginBottom="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physics Tuning"
            android:textColor="#D0BCFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Friction"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/tvFrictionVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="94%"
                android:textColor="#D0BCFF" />
        </LinearLayout>
        <SeekBar
            android:id="@+id/sbFriction"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:max="100"
            android:progress="94"
            android:progressTint="#D0BCFF"
            android:thumbTint="#D0BCFF"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Bounciness"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/tvBouncinessVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25%"
                android:textColor="#D0BCFF" />
        </LinearLayout>
        <SeekBar
            android:id="@+id/sbBounciness"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:max="100"
            android:progress="25"
            android:progressTint="#D0BCFF"
            android:thumbTint="#D0BCFF"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Wall Gravity"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/tvGravityVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10%"
                android:textColor="#D0BCFF" />
        </LinearLayout>
        <SeekBar
            android:id="@+id/sbGravity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:max="100"
            android:progress="10"
            android:progressTint="#D0BCFF"
            android:thumbTint="#D0BCFF"
            android:layout_marginBottom="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Layout &amp; Scaling"
            android:textColor="#D0BCFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Global Item Scale"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/tvItemScaleVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textColor="#D0BCFF" />
        </LinearLayout>
        <SeekBar
            android:id="@+id/sbItemScale"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:max="100"
            android:progress="50"
            android:progressTint="#D0BCFF"
            android:thumbTint="#D0BCFF"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Grid Spacing"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/tvGridSpacingVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60%"
                android:textColor="#D0BCFF" />
        </LinearLayout>
        <SeekBar
            android:id="@+id/sbGridSpacing"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:max="100"
            android:progress="60"
            android:progressTint="#D0BCFF"
            android:thumbTint="#D0BCFF"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Room Size"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/tvRoomSizeVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="#D0BCFF" />
        </LinearLayout>
        <SeekBar
            android:id="@+id/sbRoomSize"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:max="100"
            android:progress="30"
            android:progressTint="#D0BCFF"
            android:thumbTint="#D0BCFF"
            android:layout_marginBottom="48dp" />

        <Button
            android:id="@+id/btnResetCamera"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Reset Camera Defaults"
            android:textColor="#D0BCFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnClearCache"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Clear Cache"
            android:textColor="#D0BCFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnResetDefaults"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Reset All Settings"
            android:textColor="#FFB4AB"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnApplyChanges"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Save &amp; Apply"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#D0BCFF"
            android:textColor="#381E72"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
